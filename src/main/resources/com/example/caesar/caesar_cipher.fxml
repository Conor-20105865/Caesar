<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.VBox?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.Button?>

<VBox xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.caesar.CaesarCipherController">

    <!-- create input box -->
    <TextArea promptText="Input" fx:id="inputText"/>

    <!-- create output box -->
    <TextArea promptText="Output" fx:id="outputText"/>

    <!-- TODO: Move buttons for better position -->

    <!-- create encode button -->
    <Button text="Encode" style="-fx-background-color: green;" onAction="#encode"/>

    <!-- create decode button -->
    <Button text="Decode" style="-fx-background-color: #2c81db;" onAction="#decode"/>
</VBox>

